<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dadfe8"

    >

    <TextView
        android:id="@+id/lastServiced"
        android:layout_width="148dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="192dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#fff"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Last Serviced"
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018"
        tools:text="Last Serviced" />

    <TextView
        android:id="@+id/lastFueled"
        android:layout_width="146dp"
        android:layout_height="57dp"

        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Last Fueled"
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/lastServiced"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toEndOf="@+id/lastServiced"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Last Fueled" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="446dp"
        android:layout_marginTop="8dp"
        android:dividerHeight="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastFueled"
        app:layout_constraintVertical_bias="0.023"></ListView>

</android.support.constraint.ConstraintLayout>